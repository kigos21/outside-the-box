generator client {
  provider = "prisma-client-js"
}

// SCHEMA
model Admin {
  id            String @id @default(uuid())
  username      String @unique
  password      String
  contactNumber String
  otps          OTP[]
}

model OTP {
  id         String    @id @default(uuid())
  admin      Admin?    @relation(fields: [adminId], references: [id], onDelete: Cascade)
  adminId    String?
  customer   Customer? @relation(fields: [customerId], references: [id], onDelete: Cascade)
  customerId String?
  otp        String    @unique
  createdAt  DateTime  @default(now())
  expiresAt  DateTime  @default(dbgenerated("NOW() + INTERVAL '10 minutes'"))
}

model Customer {
  id                   String                @id @default(uuid())
  firstName            String
  lastName             String
  occupation           String
  affiliation          String
  mobileNumber         String
  username             String                @unique
  password             String
  otps                 OTP[]
  facilityReservations FacilityReservation[]
  Log                  Log[]
  SeatReservation      SeatReservation[]
}

model FacilityReservation {
  id            String   @id @default(uuid())
  customer      Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  customerId    String
  startDateTime DateTime
  endDateTime   DateTime
  price         Float
}

model Log {
  id                     String                @id @default(uuid())
  customer               Customer              @relation(fields: [customerId], references: [id], onDelete: Cascade)
  customerId             String
  service                Service               @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId              String
  timeIn                 DateTime
  timeOut                DateTime
  confirmedReservation   ConfirmedReservation? @relation(fields: [confirmedReservationId], references: [id], onDelete: Cascade)
  confirmedReservationId String?
}

model ConfirmedReservation {
  id                String          @id @default(uuid())
  seatReservation   SeatReservation @relation(fields: [seatReservationId], references: [id], onDelete: Cascade)
  seatReservationId String
  date              DateTime        @default(now())
  Log               Log[]
}

model SeatReservation {
  id                   String                 @id @default(uuid())
  customer             Customer               @relation(fields: [customerId], references: [id], onDelete: Cascade)
  customerId           String
  service              Service                @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  serviceId            String
  startDateTime        DateTime
  endDateTime          DateTime
  seats                Int[]
  ConfirmedReservation ConfirmedReservation[]
  ArchivedReservation  ArchivedReservation[]
}

enum ServiceType {
  Regular
  Promo
}

model Service {
  id              String            @id @default(uuid())
  name            String
  hours           Int
  price           Float
  archived        Boolean
  type            ServiceType
  logs            Log[]
  SeatReservation SeatReservation[]
}

model Report {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
}

model ArchivedReservation {
  id                String          @id @default(uuid())
  seatReservation   SeatReservation @relation(fields: [seatReservationId], references: [id], onDelete: Cascade)
  seatReservationId String
  archivedAt        DateTime        @default(now())
}
